<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>

<div class="container mt-4">
<div class="row">
  <% for entry in @entries %>
  <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
      <div class="card shadow-sm">
      <% if entry.uploaded_image.attached? %>
            <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid rounded">
          <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <p class="text-muted"><%= entry["occurred_on"] %></p>
          <p class="card-text"><%= entry["description"] %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
</p>

<p>
  <a href="/places" class="btn btn-secondary">Back to All Places</a>
</p>